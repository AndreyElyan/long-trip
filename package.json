{
  "name": "long-trip-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "env-cmd -f .env.local nest start",
    "start:dev": "env-cmd -f .env.local nest start --watch",
    "start:debug": "env-cmd -f .env.local nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:migrate:prod": "npx prisma migrate deploy && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "env-cmd -f .env.test jest --silent=false --verbose",
    "test:watch": "env-cmd -f .env.test jest --watch",
    "test:cov": "env-cmd -f .env.test jest --coverage",
    "test:debug": "env-cmd -f .env.test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd -f .env.test jest --config ./test/jest-e2e.json",
    "prisma-seed": "ts-node prisma/seed.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npx pretty-quick --staged",
      "npx eslint --fix src --ext .ts"
    ]
  },
  "dependencies": {
    "@nestjs/axios": "1.0.1",
    "@nestjs/common": "9.0.0",
    "@nestjs/core": "9.0.0",
    "@nestjs/jwt": "10.0.1",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.1",
    "@nestjs/platform-socket.io": "9.0.1",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/terminus": "9.1.4",
    "@nestjs/websockets": "9.0.1",
    "@prisma/client": "4.8.0",
    "@socket.io/redis-adapter": "^8.1.0",
    "@types/express": "4.17.13",
    "@types/googlemaps": "^3.43.3",
    "bcrypt": "5.1.0",
    "body-parser": "1.20.1",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "deepmerge": "^4.2.2",
    "nestjs-pino": "^3.1.2",
    "ngx-socket-io": "^4.4.0",
    "nodemailer": "^6.9.0",
    "passport": "0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "1.0.0",
    "pino-http": "^8.3.1",
    "redis": "^4.6.5",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.8.0",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "4.6.0"
  },
  "devDependencies": {
    "@google/maps": "^1.1.3",
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.0",
    "@nestjs/testing": "9.2.1",
    "@types/bcrypt": "5.0.0",
    "@types/jest": "28.1.8",
    "@types/node": "16.18.10",
    "@types/nodemailer": "^6.4.7",
    "@types/passport-jwt": "3.0.8",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "4.0.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest": "28.1.3",
    "lint-staged": "^13.1.0",
    "prettier": "npm:@btmills/prettier",
    "prettier-quick": "^0.0.5",
    "prisma": "4.8.0",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "9.2.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.9.4"
  }
}
